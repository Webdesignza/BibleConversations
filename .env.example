# ============================================================================
# Bible Conversations - Environment Variables Template
# Copy this to .env and fill in your actual values
# ============================================================================

# OpenAI API Key (required for embeddings)
OPENAI_API_KEY=sk-your-openai-key-here

# Groq API Key (required for Whisper STT and LLM)
GROQ_API_KEY=gsk_your-groq-key-here

# Security - Generate a secure random string
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
API_KEY=your-secure-api-key-here

# Model Configuration (optional - defaults provided)
EMBEDDING_MODEL=text-embedding-3-small
CHAT_MODEL=llama-3.1-70b-versatile
GROQ_API_BASE=https://api.groq.com/openai/v1

# RAG Configuration (optional - defaults provided)
CHROMA_DB_PATH=./chroma_db
RETRIEVAL_K=3
TEMPERATURE=0.7

# File Upload Configuration (optional - defaults provided)
UPLOAD_DIR=./uploads

# Server Configuration (Railway will override PORT)
HOST=0.0.0.0
PORT=8009